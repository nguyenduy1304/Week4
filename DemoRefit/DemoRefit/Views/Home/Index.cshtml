@model IEnumerable<DemoRefit.Models.UserClient>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List User</h1>

<p>
    <a asp-action="CreateUser">Create New User</a>
</p>
<b style="color:red">@ViewBag.Error</b>
<table class="table">
    <thead>
        <tr>
            
            <th>
                Username
            </th>
            <th>
                Email
            </th>
            <th>
                Password
            </th>
            <th>
                FullName
            </th>
            <th>
                PhoneNumber
            </th>
            <th>
                Address
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                    @item.FirstName @item.LastName
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                    @Html.ActionLink("Edit", "EditUser", new { id=item.Id }) |
                @Html.ActionLink("Delete", "DeleteUser", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
